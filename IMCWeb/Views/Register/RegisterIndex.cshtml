@{
    Layout = "_Layout";
    ViewData["Title"] = "Registrar";
}

<link rel="stylesheet" href="~/css/DivBoxStyle.css" />
<link rel="stylesheet" href="~/css/ButtonStyle.css" />
<link rel="stylesheet" href="~/css/InputTextStyle.css" />
<link rel="stylesheet" href="~/css/RegisterStyle.css" />

<div class="DivBoxStyle">
    <p id="Header">Cadastrar</p>
    <form id="Form" method="post">
        <input id="inputUserName" class="Text" type="text" placeholder="Nome de usuário" />
        <input id="inputPassword" class="Text" type="password" placeholder="Senha" />
        <input id="inputUserPasswordRetry" class="Text" type="password" placeholder="Digite sua senha novamente" />

        <div id="button">

        <button asp-controller="Register" asp-action="SaveAccount" class="Button" type="submit">
            Cadastrar
        </button>
        </div>
    </form>
</div>