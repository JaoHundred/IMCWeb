
@{
    @using IMCWeb.UTIL;

    Layout = "_Layout";
    ViewData["Title"] = "Login";

}

<link rel="stylesheet" href="~/css/DivBoxStyle.css" />
<link rel="stylesheet" href="~/css/LoginIndexStyle.css" />
<link rel="stylesheet" href="~/css/ErrorMessageStyle.css" />

<div class="DivBoxStyle">
    <p>Login</p>

    @{
        var errorMessage = ViewData[ErrorMessageConst.LoginErrorKey];

        if (errorMessage != null)
        {
            <div class="ErrorMessageDiv">
                <label>@errorMessage</label>
            </div>
        }
    }

    <form method="post" asp-controller="Login" asp-action="Log">
        @model IMCWeb.ViewModel.PersonViewModel

        <input type="text" placeholder="Nome de usuário"
               asp-for="UserName" required="" />

        <input type="password" placeholder="Senha"
               asp-for="Password" required="" />

        <div class="LogRegister">

            <button type="submit">Logar</button>

            <a asp-controller="Login" asp-action="Register">
                <input type="button" value="Criar conta" />
            </a>
        </div>
    </form>
</div>

