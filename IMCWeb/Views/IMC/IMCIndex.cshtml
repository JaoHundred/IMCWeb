@{
    Layout = "_Layout";
    ViewData["Title"] = "IMC";
}

<link rel="stylesheet" href="~/css/IMCStyle.css" />
<link rel="stylesheet" href="~/css/DivBoxStyle.css" />
<link rel="stylesheet" href="~/css/InputTextStyle.css" />
<link rel="stylesheet" href="~/css/ButtonStyle.css" />

<div class="DivBoxStyle">

    <p>Calcule seu IMC</p>
    <form method="post" asp-controller="IMC" asp-action="CalculateIMC">
        @model IMCWeb.Models.IMC

        <input class="Text" type="text" placeholder="Altura" asp-for="Height" />
        <input class="Text" type="text" placeholder="Peso" asp-for="Weight" />
        <button class="Button" type="submit">Calcular</button>
    </form>
</div>